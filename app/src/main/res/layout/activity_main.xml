<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="@dimen/edittext_textsize"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/vertical_button_margin"
            android:layout_marginBottom="@dimen/vertical_button_margin"
            android:layout_marginRight="@dimen/horizontal_button_margin"
            android:layout_marginLeft="@dimen/horizontal_button_margin">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="รท"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/vertical_button_margin"
            android:layout_marginRight="@dimen/horizontal_button_margin"
            android:layout_marginLeft="@dimen/horizontal_button_margin">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="ร"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/vertical_button_margin"
            android:layout_marginRight="@dimen/horizontal_button_margin"
            android:layout_marginLeft="@dimen/horizontal_button_margin">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="-"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/vertical_button_margin"
            android:layout_marginRight="@dimen/horizontal_button_margin"
            android:layout_marginLeft="@dimen/horizontal_button_margin">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="c"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/buttonDecimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/horizontal_button_margin"
                android:layout_marginEnd="@dimen/horizontal_button_margin"
                android:background="@color/colorPrimary"
                android:text="."
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/button_text_size"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_text_size"/>

        </LinearLayout>

        <Button
            android:id="@+id/buttonEqual"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="@dimen/vertical_button_margin"
            android:layout_marginRight="@dimen/horizontal_button_margin"
            android:layout_marginLeft="@dimen/horizontal_button_margin"
            android:background="@color/colorAccent"
            android:text="="
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_text_size"/>

    </LinearLayout>

</LinearLayout>